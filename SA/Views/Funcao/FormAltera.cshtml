@model SA.Models.Funcao
@{
    ViewBag.Title = "FormAltera";
}
<div>
    <h3>Alteração de Funções</h3>
</div>
    @using (Html.BeginForm("Alterar", "Funcao", FormMethod.Post))
    {
        @Html.HiddenFor(d => d.Id)
        <div class="form-control">
            @Html.Partial("_FormFuncao")
        </div>
        <div class="text-center">
            <input type="submit" value="Alterar" class="btn btn-primary" />
        </div>
    }
@if (!ViewBag.ModeloValido)
{
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-alert"></span>
        @Html.ValidationMessage("Funcao Inválido")
        @Html.ValidationMessageFor(d => d.Funcoes)
    </div>
}
@section Scripts {
        }