@model SA.Models.Usuario
@{
    ViewBag.Title = "_FormLogin";
}

    @if (!ViewBag.ModeloValido) { 
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-alert"></span>
        @Html.ValidationMessage("Cadastro inválido")
        @Html.ValidationMessageFor(u => u.Cpf)
        @Html.ValidationMessageFor(u => u.CentroCusto)
        @Html.ValidationMessageFor(u => u.Requerente)
        @Html.ValidationMessage("Usuario.tercerizado")
        @Html.ValidationMessage("Usuario.jaexiste")
        @Html.ValidationMessage("Usuario.CPF")
   </div>
    }
<table class="table table-bordered table-responsive">
    <tbody>
        <tr>
            <td>
                @Html.LabelFor(u => u.Cpf)
            </td>
            <td>
                @Html.TextBoxFor(l => l.Cpf, new { rows = 11 , @class = "form - control" })
            </td>
            <td>
                @Html.LabelFor(u => u.Departamento)
            </td>
            <td>
                @Html.DropDownListFor(u => u.Departamento, new SelectList(ViewBag.Departamento, "Id", "Departamentos"), new { @class = "form - control" })
            </td>

        </tr>
        <tr>
            <td>
                @Html.LabelFor(u => u.CentroCusto)
            </td>
            <td>
                @Html.TextBoxFor(u => u.CentroCusto,new { @class = "form - control" })
            </td>
            <td>
                @Html.LabelFor(u => u.Funcao)
            </td>
            <td>
                @Html.DropDownListFor(u => u.Funcao, new SelectList(ViewBag.Funcao, "Id", "Funcoes"), new { @class = "form - control" })
            </td>

        </tr>
        <tr>
            <td>
                @Html.LabelFor(u => u.Requerente)
            </td>
            <td>
                @Html.TextBoxFor(u => u.Requerente, new { @class = "form - control" })
            </td>
            <td>
                @Html.LabelFor(u => u.Tercerizado)
            </td>
            <td>
                @Html.DropDownListFor(u => u.Tercerizado, new SelectList(ViewBag.Tercerizado, "Tercerizado"),new { @class = "form - control" })
            </td>
            </tr>
        <tr>
            <td>
                @Html.Label("Empresa Tercerizada: ")
            </td>
            <td>
                @Html.TextBoxFor(u=> u.EmpresaTercerizada, new { @class = "form - control" })
            </td>
            <div class="checkbox">
                <td>@Html.LabelFor(u => u.IsAdmin, "Admin?")</td>
                <td> @Html.CheckBoxFor(u => u.IsAdmin, new { @class = "form - control" })</td>
            </div>
        </tr>
    </tbody>
</table>




